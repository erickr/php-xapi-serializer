{
    "name": "php-xapi/serializer",
    "type": "library",
    "description": "transform Experience API model objects to JSON strings and vice versa",
    "keywords": ["xAPI", "Experience API", "Tin Can API", "serializer"],
    "homepage": "https://github.com/php-xapi/serializer",
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Flothmann",
            "homepage": "https://github.com/xabbuh"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "php-xapi/exception": "^v1.0",
        "php-xapi/json-test-fixtures": "^v3.0",
        "php-xapi/model": "^4.0",
        "php-xapi/test-fixtures": "^v2.0"
    },
    "require-dev": {
        "phpspec/phpspec": "^7.0"
    },
    "conflict": {
        "xabbuh/xapi-serializer": "*"
    },
    "autoload": {
        "psr-4": {
            "spec\\Xabbuh\\XApi\\Serializer\\": "spec/",
            "Xabbuh\\XApi\\Serializer\\": "src/",
            "Xabbuh\\XApi\\Serializer\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/erickr/php-xapi-exception.git"
        },
        {
            "type": "git",
            "url": "https://github.com/erickr/php-xapi-model.git"
        },
        {
            "type": "git",
            "url": "https://github.com/erickr/php-xapi-json-test-fixtures.git"
        },
        {
            "type": "git",
            "url": "https://github.com/erickr/php-xapi-test-fixtures.git"
        }

    ]
}
